<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="2dp"
        android:id="@+id/imageViewSong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/txtViewNameSong"
        android:text="Tên bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_toRightOf="@+id/imageViewSong"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/txtViewNameSinger"
        android:text="Tên ca sĩ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/imageViewSong"
        android:layout_below="@+id/txtViewNameSong"
        android:textColor="#5a5555"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/txtViewNumberOfView"
        android:text="view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/imageViewSong"
        android:layout_below="@+id/txtViewNameSinger"
        android:textColor="#5a5555"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:padding="2dp"
        android:id="@+id/imageViewEye"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtViewNumberOfView"
        android:layout_below="@+id/txtViewNameSinger"
        />

    <TextView
        android:id="@+id/txtViewNumberOfLike"
        android:text="view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/imageViewEye"
        android:layout_below="@+id/txtViewNameSinger"
        android:textColor="#5a5555"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:padding="2dp"
        android:id="@+id/imageViewLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtViewNumberOfLike"
        android:layout_below="@+id/txtViewNameSinger"
        />

    <TextView
        android:id="@+id/txtViewNumberOfDisLike"
        android:text="view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/imageViewLike"
        android:layout_below="@+id/txtViewNameSinger"
        android:textColor="#5a5555"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:padding="2dp"
        android:id="@+id/imageViewDisLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtViewNumberOfDisLike"
        android:layout_below="@+id/txtViewNameSinger"
        />


</RelativeLayout>